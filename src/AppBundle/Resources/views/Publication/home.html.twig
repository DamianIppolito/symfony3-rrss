{% extends "AppBundle:Layouts:layout.html.twig" %}
{% block content %}

    <div class="container">
        <div id="timeline" class="col-lg-7 box-default pull-left">
            <h1 class="box-header">Timeline</h1>
            <div class="box-content">
                PUBLICACIONES LIST
            </div>
        </div>
        <div class="col-lg-4 box-default pull-left" id="user-card">
            <div class="avatar pull-left">
                {% if app.user.image == null %}
                    <img src="{{ asset('assets/images/default.png') }}" alt="{{ app.user.name }}{{ app.user.surname }}"/>
                {% else %}
                    <img src="{{ asset('uploads/users/'~app.user.image) }}" alt="{{ app.user.name }}{{ app.user.surname }}"/>
                {% endif %}
            </div>
            <div class="name-surname pull-left">
                <a href="#">{{ app.user.name }} {{ app.user.surname }}</a>
                <div class="clearfix"></div>
                <div class="nickname">{{ app.user.nick }}</div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-lg-4 box-default pull-left" id="new-publication">
            <h2 class="box-header">Crear publicaci√≥n</h2>
        </div>
    </div>

{% endblock %}